<main class="p-6 bg-gray-100 min-h-screen">
    <div class="flex justify-between items-center mb-6 bg-white p-4 rounded-lg shadow-md">
        <div>
            <h1 class="text-3xl font-bold text-[#1A1A1A]">Welcome, {{user.username}}</h1>
            <p class="text-[#262626]">Email: {{user.email}}</p>
        </div>
        <form action="/logout" method="POST">
            <button type="submit" class="bg-[#4f75ff] text-white px-6 py-2 rounded-lg hover:bg-[#3b5bcc] transition duration-300">Logout</button>
        </form>
    </div>
    <div class="grid grid-cols-12 gap-6">
        <div class="col-span-12 lg:col-span-4 bg-white p-6 rounded-lg shadow-md border-[1px] border-solid border-[#F1F1F3]">
            <h2 class="text-2xl font-bold text-[#1A1A1A] mb-2">Section 1</h2>
            <p class="text-[#262626]">Content for section 1.</p>
        </div>
        <div class="col-span-12 lg:col-span-4 bg-white p-6 rounded-lg shadow-md border-[1px] border-solid border-[#F1F1F3]">
            <h2 class="text-2xl font-bold text-[#1A1A1A] mb-2">Section 2</h2>
            <p class="text-[#262626]">Content for section 2.</p>
        </div>
        <div class="col-span-12 lg:col-span-4 bg-white p-6 rounded-lg shadow-md border-[1px] border-solid border-[#F1F1F3]">
            <h2 class="text-2xl font-bold text-[#1A1A1A] mb-2">Section 3</h2>
            <p class="text-[#262626]">Content for section 3.</p>
        </div>
    </div>
</main>